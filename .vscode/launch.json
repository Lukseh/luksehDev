{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Vue Frontend",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["run", "dev"],
            "cwd": "${workspaceFolder}/frontend-vue",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Launch Node Proxy",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node-proxy/server.js",
            "cwd": "${workspaceFolder}/node-proxy",
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Backend API (Task)",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "Start Backend via dotnet run",
            "program": "${workspaceFolder}/node-proxy/server.js",
            "skipFiles": ["<node_internals>/**"],
            "console": "integratedTerminal"
        },
        {
            "name": "Launch Backend API (Debug)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Backend",
            "program": "${workspaceFolder}/backend/bin/Debug/net9.0/LuksehDev.Backend.exe",
            "args": [],
            "cwd": "${workspaceFolder}/backend",
            "stopAtEntry": false,
            "console": "integratedTerminal",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5188"
            }
        }
    ],
    "compounds": [
        {
            "name": "Launch Full Stack",
            "configurations": [
                "Launch Backend API (Task)",
                "Launch Node Proxy",
                "Launch Vue Frontend"
            ]
        },
        {
            "name": "Launch Full Stack (Clean Build)",
            "configurations": [
                "Launch Backend API (Task)",
                "Launch Node Proxy", 
                "Launch Vue Frontend"
            ],
            "preLaunchTask": "Clean and Build (Pre-Launch)",
            "stopAll": true
        }
    ]
}